<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <ImageView
            android:id="@+id/customview_cs_item_iv"
            android:src="@drawable/customview_is_check"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/customview_cs_item_tv"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="分分类分类分类分类类" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/customview_cs_rv_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:src="@drawable/customview_cs_right_arrow" />
    </LinearLayout>
    <View
        android:layout_marginLeft="14dp"
        android:layout_width="match_parent"
        android:background="#e6e6e6"
        android:layout_height="1dp"/>
</LinearLayout>